<Application x:Class="TaskOrganizer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TaskOrganizer"
             xmlns:views="clr-namespace:TaskOrganizer.View"
             xmlns:viewmodels="clr-namespace:TaskOrganizer.ViewModel"
             Startup="App_Startup"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:TodoViewModel}">
            <views:TodoView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:PomodoroViewModel}">
            <views:PomodoroView/>
        </DataTemplate>  
        <DataTemplate DataType="{x:Type viewmodels:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>
    </Application.Resources>
</Application>
