<UserControl x:Class="TaskOrganizer.View.TodoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskOrganizer.View"
             xmlns:viewmodel="clr-namespace:TaskOrganizer.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:TodoViewModel}"
             mc:Ignorable="d" Height="507" Width="799">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Background="BlanchedAlmond">
            <Label Content="ToDo List" HorizontalAlignment="Center" FontFamily="Fira Code" FontSize="30" />
            <Label Content="Enter a new task:" HorizontalAlignment="Left" Margin="20,0,0,0"/>
            <TextBox Width="150" Height="80" Text="{Binding NewTask, Mode=OneWay}">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="3"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Grid Name="gridButton" Width="120" Height="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Add" Command="{Binding AddNewTaskCommand}"/>
                <Button Grid.Column="1" Content="Delete"/>
            </Grid>
        </StackPanel>

        <Grid Height="Auto" Grid.Column="1">
            <StackPanel Margin="0,10">
                <TextBlock Text="Your tasks:" Margin="10" HorizontalAlignment="Left"/>
                <ScrollViewer Height="330" Margin="0,0,0,0">
                    <ItemsControl ItemsSource="{Binding TodoList}" Background="White">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>

                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
